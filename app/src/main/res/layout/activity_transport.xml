<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/project"
    tools:context=".transport">
<TextView
    android:id="@+id/dshops"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:text="locate shops"
    android:textSize="30dp"
    android:textColor="#1A35CD"/>
    <Button
        android:id="@+id/dbtn"
        android:layout_below="@+id/dshops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="locate shops"
        />
    <TextView
        android:id="@+id/dpple"
        android:layout_below="@+id/dbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="locate homes"
        android:textSize="30dp"
        android:textColor="#1A35CD"/>
    <Button
        android:id="@+id/dbtn1"
        android:layout_below="@+id/dpple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="locate homes"
        />

</RelativeLayout>